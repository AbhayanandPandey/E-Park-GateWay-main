  <script>
    document.getElementById("passwordTab").addEventListener("click", () => {
      document.getElementById("passwordSection").style.display = "block";
      document.getElementById("otpSection").style.display = "none";
      document.getElementById("save1").style.display = "block";
      document.getElementById("save2").style.display = "none";

      document.getElementById("passwordTab").classList.add("active");
      document.getElementById("otpTab").classList.remove("active");

    });

    document.getElementById("otpTab").addEventListener("click", () => {
      document.getElementById("passwordSection").style.display = "none";
      document.getElementById("save2").style.display = "block";
      document.getElementById("save1").style.display = "none";
      document.getElementById("otpSection").style.display = "block";
      document.getElementById("passwordTab").classList.remove("active");
      document.getElementById("otpTab").classList.add("active");
    });

    document.getElementById("sendOtpBtn").addEventListener("click", async () => {
      document.getElementById("otpInput").style.display = "block"; // Show OTP input
      const email = document.getElementById("ueml").value.trim(); // Get email input
      if (!email) {
        alert("Please enter an email!");
        return;
      }
      try {
        const res = await fetch("/Edit-profile-details", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ email })
        });

        const responseData = await res.text();
        document.getElementById("response").innerHTML = responseData; // Show response
      } catch (error) {
        console.error("Error:", error);
        document.getElementById("response").innerHTML = "Failed to send OTP.";
      }
    });
    document.getElementById("save2").addEventListener("click", async () => {
      const otp = document.getElementById("otpInput").value.trim();
      const email = document.getElementById("ueml").value.trim(); // Fixed incorrect ID
      const cemail = document.getElementById("newEmail").value.trim(); // Fixed incorrect ID
      const name = document.getElementById("newUsername").value.trim();

      try {
        const res = await fetch("/conf-OTP", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ otp, email, cemail, name }),
        });

        const responseData = await res.json();
        alert(responseData.message);
        if (responseData.redirect) {
          window.location.href = responseData.redirect; // Redirect on success
        }
      } catch (error) {
        console.error("Error:", error);
      }
    });
    document.getElementById("save1").addEventListener("click", () => {
      document.getElementById("updateForm").submit();
    });
  </script>
  <script>
  document.getElementById("updateForm").addEventListener("keypress", function (event) {
    if (event.key === "Enter") {
